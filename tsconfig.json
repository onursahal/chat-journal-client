{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/graphql/*": ["src/graphql/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/definitions/*": ["src/definitions/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/fonts/*": ["src/fonts/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".eslintrc.js",
    "__tests__/**/*.tsx",
    "cypress/**/*.ts",
    "commitlint.config.js",
    "next.config.mjs",
    "next-i18next.config.js",
    "middleware.js",
    ".next/types/app/[locale]/page.tsx"
  ],
  "exclude": ["node_modules", "cypress", "cypress.config.ts"]
}
